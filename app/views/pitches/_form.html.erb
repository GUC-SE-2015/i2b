#Author Jirayr Benohanian -->
<% @pitch = Pitch.new %>
<%= form_for @pitch do |f| %>
 
  <% if @pitch.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pitch.errors.count, "error") %> prohibited
        this Pitch from being saved:
      </h2>
      <ul>
        <% @pitch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.collection_select :email, User.all, :email, :email, include_blank: false %>
  </p>

  <p>
    <%= f.label :brief_description %><br>
    <%= f.text_area :brief_description, :style => "width:400px;height:150px;" %>
  </p>

  <p>
    <%= f.label :link %><br>
    <%= f.text_field :link, :style => "width:400px;height:25px;" %>
  </p>

  <p>
    <%= f.label :full_description %><br>
    <%= f.text_area :full_description, :style => "width:400px;height:150px;" %>
  </p>

  <p>
    <%= f.label :full_video %> URL<br>
    <%= f.text_field :full_video, :style => "width:400px;height:25px;" %>
  </p>

  <p>
    <%= f.label :demo_video %> URL<br>
    <%= f.text_field :demo_video, :style => "width:400px;height:25px;" %>
  </p>

  <!-- 
  <p><%=f.file_field :video, multiple: true%></p>
  -->


  <p>
    <%= f.submit %>
  </p>
 
<% end %>