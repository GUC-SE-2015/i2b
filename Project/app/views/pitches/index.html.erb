 <div class="container">
<h1>Idea2Business</h1>
<h3> Posted Ideas </h3> 

<br><br>
<table>
  <tr>
    <th>Title</th>
    <th>Brief Desc</th>
        <th>Full Desc</th>
    <th colspan="8"></th>
  </tr>
 
  <% @pitches.each do |pitch| %>
    <tr>
      <td><%= pitch.title %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= pitch.brief_description %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= pitch.full_description %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= link_to 'Show', pitch_path(pitch) %>&nbsp;&nbsp;&nbsp;</td>
      <td><%= link_to 'Edit', edit_pitch_path(pitch) %>&nbsp;&nbsp;&nbsp;</td>
      <td><%= link_to 'Delete', pitch_path(pitch), method: :delete %></td>
    </tr>
  <% end %>
