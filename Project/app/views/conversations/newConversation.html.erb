<!-- Page Content -->
<div class="container">
<!-- Page Header -->
<div class="col-lg-12">
  <h1 class="page-header">New Conversation<hr></h1>
</div>
<!-- /.header -->

<!-- Listing the user's conversations --> 
<table class="table table-striped table-hover ">
  <thead>
      <tr>
        <th>#</th>
        <th>Conversation With</th>
        <th>Last Contact</th>
      </tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
      <tr>
        <td>-></td>
        <td>
    	<% if user.id != current_user.id %>	<%= user.first_name %></td>

  		<td><%= link_to ‘Message me!’, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: ‘post’%></td>
          		<% end %>

      </tr>
       <% end %>
  </tbody>
</table>
<!-- / Listing the user's conversations --> 
</div>
