<!-- Page Content -->
<div class="container">
<!-- Page Header -->
<div class="col-lg-12">
  <h1 class="page-header">Active Conversations<hr></h1>
</div>
<!-- /.header -->

<!-- Listing the user's conversations --> 
<table class="table table-striped table-hover ">
  <thead>
      <tr>
        <th>#</th>
        <th>Conversation With</th>
        <th>Last Contact</th>
      </tr>
  </thead>
  <tbody>
   <% @conversations.each do |conversation| %>
      <tr>
        <td>-></td>
        <td>
          <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
            <% if conversation.sender_id == current_user.id %>
              <% recipient = User.find(conversation.recipient_id) %>
                <% else %>
                  <% recipient = User.find(conversation.sender_id) %>
                <% end %>
              <%= link_to recipient.email,   conversation_messages_path(conversation)%>
            <% end %>
          <% end %>    
        </td>
      </tr>
  </tbody>
</table>
<!-- / Listing the user's conversations -->

<hr>

<!-- Page Header -->
<div class="col-lg-12">
  <h1 class="page-header">New Conversations<hr></h1>
</div>
<!-- /.header -->

<!-- Listing all users --> 
<table class="table table-striped table-hover ">
  <thead>
      <tr>
        <th>#</th>
        <th>New Conversation</th>
      </tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
    <% if user.id != current_user.id %>
          <tr>
        <td>-></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></td>
    <% end %>
  <% end %>
        </tr>
  </tbody>
</table>
<!-- /Listing all users -->
</div>
