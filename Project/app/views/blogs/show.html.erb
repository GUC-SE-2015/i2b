<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<h2>Comments</h2>
<% @blog.blogComments.each do |blogComment| %>
  <p>
    <strong>Commenter:</strong>
    <%= blogcomment.commenter %>
  </p>
 
  <p>
    <strong>Blogcomment:</strong>
    <%= blogcomment.body %>
  </p>
<% end %>
 
<h2>Add a comment:</h2>
<%= form_for([@blog, @blog.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 <%= link_to 'Back', blogs_path %>
