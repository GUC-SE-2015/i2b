<!-- Page Content -->
<div class="container">
  <!-- Page Header -->
  <div class="col-lg-12">
    <h1 class="page-header">Conversation<hr></h1>
  </div>
  <!-- /.header -->

  <!-- Listing all messages --> 
  <table class="table table-striped table-hover ">
    <thead>
        <tr>
          <th>Sender</th>
          <th>Message</th>
          <th>Sent at</th>
        </tr>
    </thead>
    <tbody>
     <% @messages.each do |message| %>
      <% if message.body %>
       <% user = User.find(message.user_id) %>
                <tr>
          <td><%= user.email %></td>
          <td><%= message.body %></td>
          <td><%= message.message_time %></td>
      <% end %>
    <% end %>
          </tr>
    </tbody>
  </table>
  <!-- /Listing all messages -->


  <%= form_for [@conversation, @message] do |f| %>
   <div class=â€fieldâ€>
     <%= f.text_area :body %>
   </div>
   
   <%= f.text_field :user_id, value: current_user.id, type: 'hidden' %>
   
   <div>
     <%= f.submit 'Send' %>
   </div>
  <% end %>
</div>
